<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <welcome-file-list>
  	<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>


  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>


  <servlet>
    <servlet-name>create</servlet-name>
    <servlet-class>servlet.CreateUserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>create</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  

  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>servlet.HomeTransitionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>admission</servlet-name>
    <servlet-class>servlet.AdmissionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>admission</servlet-name>
    <url-pattern>/admission</url-pattern>
  </servlet-mapping>

  
  <servlet>
    <servlet-name>leaving</servlet-name>
    <servlet-class>servlet.LeavingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>leaving</servlet-name>
    <url-pattern>/leaving</url-pattern>
  </servlet-mapping>

  
  <servlet>
    <servlet-name>attendance</servlet-name>
    <servlet-class>servlet.AttendanceServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>attendance</servlet-name>
    <url-pattern>/attendance</url-pattern>
  </servlet-mapping>
 
 
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>userSetting</servlet-name>
    <servlet-class>servlet.UserSettingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>userSetting</servlet-name>
    <url-pattern>/userSetting</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>userDelete</servlet-name>
    <servlet-class>servlet.UserDeleteServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>userDelete</servlet-name>
    <url-pattern>/userDelete</url-pattern>
  </servlet-mapping>
  
</web-app>

